#!/bin/bash

# Check if second argument is given
if [ -z "$1" ]; then
    echo "Usage: $(basename "$0") <filename>"
    exit 1
fi

# File existence check
FILE="$1"
if [ ! -f "$FILE" ]; then
    echo "File '$FILE' not found!"
    exit 2
fi

# Copying content into clipboard via 'wl-copy' (faster than xclip)
wl-copy < "$FILE"

echo "File '$FILE' copied into clipboard!"
